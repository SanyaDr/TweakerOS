<Page x:Class="TweakerOS.View.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TweakerOS.View.Pages"
      mc:Ignorable="d"
      Title="HomePage" Height="450" Width="800">
    <Border CornerRadius="5" Background="{DynamicResource SecondaryBackgroundColor}" Padding="0 0 0 10">
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
            <StackPanel>
                <Label Style="{StaticResource InfoPagesLabelStyle}">Информация о системе</Label>
                <Separator BorderThickness="10" BorderBrush="Black" Margin="10 0" />
                
            </StackPanel>
        </ScrollViewer>

    </Border>
</Page>